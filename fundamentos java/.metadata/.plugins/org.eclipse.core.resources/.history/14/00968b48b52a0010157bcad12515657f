package projetoum;

import java.util.Scanner;

public class principal {

	public static void main(String[] args) {
		//declaraçao de variaveis
		String nomePessoas;
		int idadePessoas;
		float horasTrabalhos, valorHora = 25.0f;
		double salarioTotal;
		boolean demitido = false;
		/*entrada de dados
		 * ultilizando scanner pela primeira vez
		 */
		Scanner sc = new Scanner(System.in);
		//mostra a expressao e pula para a linha de baixo
		System.out.println("Infrme o seu nome");
		nomePessoas = sc.next();
		System.out.println("O nome que voce informou é : "+nomePessoas);
		
		System.out.println("Infrme a sua idade");
		idadePessoas = sc.next();
		System.out.println("A idade que voce informou é : "+idadePessoas);
		
		
	}

}

